{
  "root": true,
  "env": 
  {
    "browser": true,
    "es6": true,
    "node": true
  },
  "rules": 
  {
    "jsx-quotes": [ "error", "prefer-single" ],
    "comma-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "object-curly-spacing": [ "error", "always" ],
    "array-bracket-spacing": [ "error", "always" ],
    "brace-style": [ "error", "allman" ],
    "indent": [ "error", 2 ],
    "quotes": [ "error", "single" ],
    "semi": [ "error", "always" ]
  }
}